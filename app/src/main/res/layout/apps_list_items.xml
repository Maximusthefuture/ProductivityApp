<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    android:id="@+id/card_view">


    <ImageView
        android:id="@+id/app_icon_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/add_app_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_toEndOf="@id/app_icon_image_view"
            tools:text="Mine" />

            <TextView
                android:layout_toEndOf="@id/app_icon_image_view"
                android:id="@+id/app_last_time_used_text_view"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@id/app_icon_image_view"
                android:layout_height="wrap_content"
                tools:text="Last used 15/15/12 18:20"
                android:layout_marginStart="@dimen/padding_small"/>

            <TextView
                android:id="@+id/usage_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="13m 4s"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>


</RelativeLayout>